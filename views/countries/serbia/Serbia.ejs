<%- include('../../main-comp/header'); -%>
    <!-- Navigation bar -->
    <%- include('../../navigations/nav-bar'); -%>
        <div class="country-container bg-slate-100 pb-10 md:mt-20 lg:mt-20 mt-10">

            <div class="h-44 country-name-container mst-10 ">
                <div class="bg-slate-800/30 backdrop-blur-lg h-full w-full flex flex-row justify-center items-center">
                    <img class="h-24 w-24 bg-white p-2 rounded-full mr-8"
                        src="../../../public/media-source/flags-png/serbia.png" alt="">
                    <div>
                        <h1 class="text-white font-serif md:text-6xl lg:text-6xl text-2xl ">STUDY MBBS IN SERBIA</h1>
                        <p class="text-white font-serif">Home / Serbia</p>
                    </div>
                </div>
            </div>
            <div class="flex flex-row">
                <div class="basis-10/12 ">
                    <!-- Countries card  -->
                    <div>
                        <div class="bg-green-400 w-full py-5 ">
                            <h1 class="text-white text-3xl font-bold ml-20">Colleges in Serbia</h1>
                        </div>
                        <div class="grid grid-cols-3 gap-4 ml-20 mt-10">
                            <% for(let i=0; i<total; i++) { %>
                                <div class="flex flex-col  shadow-lg bg-white rounded-lg">
                                    <div
                                        class="bg-[url('../../../public/media-source/countries/serbia/UOK/UOK-building.jpg')] h-52 bg-cover bg-no-repeat rounded-lg static">
                                        <button
                                            class="bg-green-600 text-sm rounded-lg py-2 px-4 text-white relative top-5 left-5">public</button>
                                    </div>
                                    <div class="px-2 py-4">
                                        <h1 class="font-bold text-xl text-gray-800"><%=college_name%></h1>
                                        <div class="flex flex-row gap-2 pt-4">
                                            <p class="border-r-2 border-gray-300 px-2"><span>Course:</span> course name
                                            </p>
                                            <p><span>Degree:</span> Degree Name</p>
                                        </div>
                                        <hr class="h-0.5 my-4 bg-gray-300 border-0 mt-2 ">
                                        <div class="flex flex-row gap-4">
                                            <div>
                                                <p>University Type: <span>text</span></p>
                                                <p>Grade: <span>text</span></p>
                                                <p>intake: <span>text</span></p>
                                            </div>
                                            <div>
                                                <p>Specialization:</p>
                                                <p>World Rank</p>
                                                <p>Medium</p>
                                            </div>

                                        </div>
                                        <div class="flex flex-wrap gap-4 mt-4  ">
                                            <buton class="bg-green-600 text-white py-2 px-4 rounded-md">Learn More
                                            </buton>
                                            <buton class="bg-yellow-600 text-white py-2 px-4 rounded-md">Apply Now
                                            </buton>
                                            <buton></buton>
                                        </div>
                                    </div>
                                </div>
                                <% } %>

                        </div>
                    </div>
                </div>
                <div class="basis-2/12 bg-green-500 h-full w-full">

                </div>
            </div>

        </div>
        <%- include('../../main-comp/footer'); -%>